doctype html
html(lang="en")
    head
        title shortme.fun
        // meta
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        // CSS
        link(href="public/css/style.css" type="text/css" rel="stylesheet" media="screen,projection")

    body
        header
            div.header-logo
                img(src="public/img/logo.png").logo
                div.logo-txt SHORTME.FUN
            img(src="public/img/header-bg.png").header-bg

        main
            div.main-header Short your links - easy & free
            div.main-text Dream big. With shorten, simplified links. Build shorten links with this powerful tool.

        form(action="shortMe" method="POST")
            label(for="fullUrl") URL
            input(name="fullUrl" id="fullUrl" type="url")
            input(name="premium" id="premium" type="text")
            button(type="submit") shortme.fun

        div.container
            if shortUrls != null
                each val in shortUrls
                    ul
                        li= val.short

        div.container
            p= short
            p= full

