doctype html
html(lang="en")
    head
        title shortme.fun
        // meta
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        // CSS
        link(href="public/css/style.css" type="text/css" rel="stylesheet" media="screen,projection")
        link(href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" type="text/css" rel="stylesheet" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous")

    body
        header
            div.header-logo
                a(href="https://shortme.fun")
                    img(src="public/img/logo.png").logo
                div.logo-text shortme.fun
            div.filler

            img(src="public/img/header-bg.png").header-bg

            div.header-desc
                div.header-title Short your links - easy & free
                div.header-text Dream big. With shorten, simplified links. Build shorten links with this powerful tool.

        main
            section
                form(action="shortMe" method="POST").section-form
                    label(for="fullUrl")
                    input(name="fullUrl" id="fullUrl" type="url" required="required" placeholder="Make your links shorter")
                    label(for="premium").section-text Premium short link ending (optional):
                    input(name="premium" id="premium" type="text" placeholder="Premium").input-premium
                    span.section-text.section-example shortme.fun/Premium
                    button(type="submit") shorten

            section
                div.desc
                    div.desc-header Simple shortener - that's all you really need!
                    div.desc-text Just paste the full url into input, click "shorten" and enjoy the shortened link.
                    div.divider-desc

                    div.desc-header The most recognized brands in the world love
                    span.logo-text.desc-logo-text  shortme.fun

                    div.comp
                        div.comp-item
                            img(src='public/img/space-cube.png').comp-img
                        div.comp-item
                            img(src='public/img/cheshire-county-hygiene-services.png').comp-img
                        div.comp-item
                            img(src='public/img/the-dance-studio.png').comp-img
                        div.comp-item
                            img(src='public/img/baby-swim.png').comp-img
                        div.comp-item
                            img(src='public/img/the-web-works.png').comp-img
                        div.comp-item
                            img(src='public/img/james-and-sons.png').comp-img
                        div.comp-item
                            img(src='public/img/beauty-box.png').comp-img
                        div.comp-item
                            img(src='public/img/greens-food-suppliers.png').comp-img
                        div.comp-item
                            img(src='public/img/crofts-accountants.png').comp-img
                        div.comp-item
                            img(src='public/img/fast-banana.png').comp-img
                    div.divider-comp

                div.toplist List of most clicked links:
                    ul
                        if shortUrls != null
                        each val in shortUrls
                            li
                                a(href="https://shortme.fun/" + val.short).link shortme.fun/#{val.short}
                                span  #{val.clicks}

        footer.footer
            div.container-logo.footer-logo
                img(src="public/img/logo.png").logo
                div.logo-text shortme.fun

            div.footer-text
                span © 2020 shortme.fun created with passion and ❤️ by&nbsp
                a(href="mailto:karolskolasinski@gmail.com").link Karol Skolasiński
                span , logo&nbsp
                a(href="http://www.freepik.com").link Designed by starline / Freepik
                span , picture&nbsp
                a(href="http://www.freepik.com").link Designed by pch.vector / Freepik

            div.social
                div.social-item
                    a(href="https://twitter.com")
                        i.fab.fa-twitter
                div.social-item
                    a(href="https://instagram.com")
                        i.fab.fa-instagram
                div.social-item
                    a(href="https://facebook.com")
                        i.fab.fa-facebook-f
                div.social-item
                    a(href="https://karolskolasinski.pl")
                        i.fas.fa-globe
