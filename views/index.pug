doctype html
html(lang="en")
    head
        title shortme.fun
        // meta
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        // CSS
        link(href="public/css/style.css" type="text/css" rel="stylesheet" media="screen,projection")

    body
        form(action="shortMe" method="POST")
            label(for="fullUrl") URL
            input(name="fullUrl" id="fullUrl" type="url")
            input(name="premium" id="premium" type="text")
            button(type="submit") shortme.fun

        div.container
            if shortUrls != null
                each val in shortUrls
                    ul
                        li= val.short

        div.container
            p= short
            p= full

